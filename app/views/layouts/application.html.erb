<!DOCTYPE html>
<html>
  <head>
    <title>Disarray</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:title" content="Disarray" /> 
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://disarray-chat.herokuapp.com/#/" />
    <meta property="og:image" content="https://i.gyazo.com/3fcd2e94316f9f810e53188f13172606.gif" />
    <meta property="og:description" content="A chat application" />

    <%= favicon_link_tag asset_path('apple-touch-icon.png'), :rel => 'icon', :type =>  'image/png' %>
    <%= favicon_link_tag asset_path('favicon.ico'), :rel => 'icon', :type => "image/x-icon" %>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splashURL = "<%= image_url('splash_sans.png') %>";
      window.splashWifiURL = "<%= image_url('splash_wifi.png') %>";
      window.splashWifiAltURL = "<%= image_url('splash_wifi2.png') %>";
      window.splashPromptURL = "<%= image_url('splash_prompt.png') %>";
      window.splashNetworkURL = "<%= image_url('splash_network.png') %>";
      window.splashFooterURL = "<%= image_url('splash_footer.png') %>";
      window.logoIconURL = "<%= image_url('icon_v2.png') %>";
      window.dkIconURL = "<%= image_url('dk_icon.png') %>"
      window.logoURL = "<%= image_url('logo_solo.png') %>";
      window.scURL = "<%= image_url('server_create.png') %>"
      window.sjURL = "<%= image_url('server_join.png') %>"
      window.demoURL = "<%= image_url('demo.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
