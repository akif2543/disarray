<!DOCTYPE html>
<html>
  <head>
    <title>Disarray</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:title" content="Disarray" /> 
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://disarray-chat.herokuapp.com/#/" />
    <meta property="og:image" content="https://i.imgur.com/01DR4Xr.png" />
    <meta property="og:description" content="A chat application" />

    <link rel="apple-touch-icon" sizes="180x180" href="<%= image_url('favicon//apple-touch-icon.png') %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= image_url('favicon/favicon-32x32.png') %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= image_url('/favicon/favicon-16x16.png') %>">
    <link rel="manifest" href="<%= image_url('/favicon/site.webmanifest') %>">
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splashURL = "<%= image_url('splash_sans.png') %>";
      window.splashWifiURL = "<%= image_url('splash_wifi.png') %>";
      window.splashWifiAltURL = "<%= image_url('splash_wifi2.png') %>";
      window.splashPromptURL = "<%= image_url('splash_prompt.png') %>";
      window.splashNetworkURL = "<%= image_url('splash_network.png') %>";
      window.splashFooterURL = "<%= image_url('splash_footer.png') %>";
      window.logoIconURL = "<%= image_url('icon_v2.png') %>";
      window.dkIconURL = "<%= image_url('dk_icon.png') %>"
      window.logoURL = "<%= image_url('logo_solo.png') %>";
      window.scURL = "<%= image_url('server_create.png') %>"
      window.sjURL = "<%= image_url('server_join.png') %>"
      window.user1URL = "<%= image_url('user_1.png') %>"
      window.user2URL = "<%= image_url('user_2.png') %>"
      window.user3URL = "<%= image_url('user_3.png') %>"
      window.user4URL = "<%= image_url('user_4.png') %>"
      window.demoURL = "<%= image_url('demo.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
